@model MaxThrottle.Models.CreateCarViewModel
<div>
    <form class="create-form" method="POST" enctype="multipart/form-data">
        <div>
            @Html.LabelFor(m => m.ManufacturerId, "Manufacturer")
            @Html.DropDownList("ManufacturerId", null, "-", new { id="car-manufacturer" })
            @Html.ValidationMessageFor(m => m.ManufacturerId, null)
        </div>
        <div>
            @Html.LabelFor(m => m.CarModelId, "Model")
            @Html.DropDownList("CarModelId", null, "-", new { id = "car-model" })
            @Html.ValidationMessageFor(m => m.CarModelId, null)
        </div>
        <div>
            @Html.LabelFor(m => m.EngineId, "Engine")
            @Html.DropDownList("EngineId", null, "-", new { id = "car-engine" })
            @Html.ValidationMessageFor(m => m.EngineId, null)
        </div>
        <div>
            @Html.LabelFor(m => m.YearOfProduction, "YearOfProduction")
            @Html.DropDownList("YearOfProduction", null, "-")
            @Html.ValidationMessageFor(m => m.YearOfProduction, null)
        </div>
        <div>
            @Html.LabelFor(m => m.Price, "Price")
            @Html.TextBoxFor(m => m.Price)
            @Html.ValidationMessageFor(m => m.Price, null)
        </div>
        <div>
            @Html.LabelFor(m => m.KilometersRan, "Kilometers ran")
            @Html.TextBoxFor(m => m.KilometersRan)
            @Html.ValidationMessageFor(m => m.KilometersRan, null)
        </div>
        <div>
            <label for="leather-interior">Leather interior</label>
            <input type="checkbox" id="leather-interior" name="leatherInterior" value="True"/>

            <label for="air-conditioner">Air Conditioner</label>
            <input type="checkbox" id="air-conditioner" name="airConditioner" value="True"/>
        </div>
        <div>
            <input type="file" id="car-picture" name="carPicture" />
            <img src="#" id="preview-car-picture" alt="Your Image"
                 onerror="this.src = '../../Content/CarImages/No_image_available.png'"
                 width="240" height="180" />
        </div>
        <input type="submit" value="Create" />
    </form>
</div>
@Scripts.Render("~/Scripts/SiteScripts/index.js")
@Scripts.Render("~/Scripts/SiteScripts/imagePreviewer.js")